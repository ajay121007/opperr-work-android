<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:layout_gravity="center"
                android:id="@+id/tvPath"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Home>Adminstrative"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/PinkRoseLight"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/filter_events"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/LightGray"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_height="wrap_content">


    <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/Gray"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_4"
                android:id="@+id/ll_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:text="@string/str_company"
                    android:textSize="@dimen/dp_12"
                    android:fontFamily="@font/rubik_light"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCompany"
                    android:fontFamily="@font/rubik_regular"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:hint="@string/select_company"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/Gray"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_4"
                android:id="@+id/ll_agency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:text="@string/str_agency"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="@dimen/dp_12"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAgency"
                    android:hint="@string/select_agency"
                    android:fontFamily="@font/rubik_regular"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/Gray"/>


        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight=".5"
                        android:text="@string/str_started_by"
                        android:textAllCaps="true"
                        android:paddingLeft="@dimen/dp_4"
                        android:textSize="@dimen/dp_12"
                        android:fontFamily="@font/rubik_light"
                        android:layout_height="wrap_content"/>


                <View android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="@color/Gray"/>


                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:text="@string/str_status"
                        android:fontFamily="@font/rubik_light"
                        android:textAllCaps="true"
                        android:textSize="@dimen/dp_12"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCreated"
                            android:hint="@string/str_started_by"
                            android:textColor="@color/colorPrimaryDark"
                            android:paddingStart="@dimen/dp_4"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            style="@style/TextAppearance.AppCompat.Large"
                            android:layout_height="wrap_content" android:paddingLeft="@dimen/dp_4"/>

                </RelativeLayout>


                <View android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="@color/Gray"/>


                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:text="@string/str_select_status"
                            android:layout_marginRight="@dimen/dp_4"
                            android:id="@+id/tvStatus"
                            android:textColor="@color/colorPrimaryDark"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/rubik_regular"
                            style="@style/TextAppearance.AppCompat.Large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                </RelativeLayout>



            </LinearLayout>



        </androidx.appcompat.widget.LinearLayoutCompat>




        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/Gray"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_margin="@dimen/dp_4"
                android:id="@+id/llFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:text="@string/str_from_date"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="@dimen/dp_12"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFromDate"
                        android:fontFamily="@font/rubik_regular"
                        style="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="@string/str_select_date"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/Gray"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_margin="@dimen/dp_4"
                android:id="@+id/llToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:text="@string/str_to_date"
                    android:textSize="@dimen/dp_12"
                    android:fontFamily="@font/rubik_light"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvToDate"
                        android:fontFamily="@font/rubik_regular"
                        style="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="@string/str_select_date"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/Gray"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_margin="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:text="@string/str_duration"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="@dimen/dp_12"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edDuration"
                        android:background="@null"
                        android:fontFamily="@font/rubik_regular"
                        style="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="@string/str_enter_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/Gray"/>
    </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/PinkRoseLight"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/matching_process_monitors"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_process_monitor"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
